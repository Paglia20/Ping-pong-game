{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/local/opt/avr-gcc@9/avr/include" // Path to AVR include files
            ],
            "defines": [
                "__AVR_ATmega162__" // Define the ATmega162 microcontroller
            ],
            "compilerPath": "/usr/local/bin/avr-gcc", // Path to your AVR GCC compiler
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64"   // Use gcc-x64 for AVR
        }
    ],
    "version": 4
}